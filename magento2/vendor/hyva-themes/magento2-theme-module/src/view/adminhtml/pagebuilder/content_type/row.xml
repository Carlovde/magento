<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <type name="row">
        <appearances>
            <appearance name="contained">
                    <elements>
                        <element name="inner">
                            <attribute name="background_lazy_load" source="data-background-lazy-load"/>
                        </element>
                    </elements>
            </appearance>
            <appearance name="full-width">
                <elements>
                    <element name="main">
                        <attribute name="background_lazy_load" source="data-background-lazy-load"/>
                    </element>
                </elements>
            </appearance>
            <appearance name="full-bleed">
                <elements>
                    <element name="main">
                        <attribute name="background_lazy_load" source="data-background-lazy-load"/>
                    </element>
                </elements>
            </appearance>
        </appearances>
    </type>
</config>
